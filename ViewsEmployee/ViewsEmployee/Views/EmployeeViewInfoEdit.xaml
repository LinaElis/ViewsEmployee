<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewsEmployee.Views.EmployeeViewInfoEdit">
  <ContentPage.Content>

    <Grid Padding="5">
      <StackLayout>
        <Label x:Name="lblInfoEdit" Text="Write something about yourself :)" XAlign="Center"  YAlign="Center"/>
        <Entry x:Name="entryInfo" />
        <Button x:Name="btnSaveInfo" Text="Save info" />
      </StackLayout>
    </Grid>

  </ContentPage.Content>
</ContentPage>